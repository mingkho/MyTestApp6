{
	"compilerOptions": {
		"allowJs": false,
		"lib": ["es6"],
		"listEmittedFiles": false,
		"listFiles": false,
		"module": "commonjs",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"outDir": "./out",
		"removeComments": false,
		"experimentalDecorators": true,
		"rootDir": ".",
		"rootDirs": ["./src"],
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "es6",
		"traceResolution": false,
		"declaration": true,
		"alwaysStrict": true,
		"resolveJsonModule": true
	},
	"include": ["./src/**/*"],
	"exclude": ["./src/integration-tests", "./src/tests"]
}